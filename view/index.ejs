<h1><%- title %></h1>

<% if(isLogged) { %>
<form action="<%- urlAddThing %>" method="POST" id="submitForm">
    <div class="form-group">
        <input type="text" name="thing" class="form-control form-control-lg" placeholder="Add Something you like">
    </div>
    <div class="form-check mb-2">
        <input type="checkbox" class="form-check-input"  name="private" id="exampleCheck1" value="1">
        <label class="form-check-label" for="exampleCheck1">Private</label>
    </div>
    <input type="submit" value="Add" class="btn btn-dark btn-lg">
    <a href="/" class="btn btn-danger btn-lg">Cancel</a>
</form>
<% } %>

